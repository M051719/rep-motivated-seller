{
  "templateName": "Testimonial/Success Story - RepMotivatedSeller",
  "version": "1.0.0",
  "description": "Template for client success stories and testimonials",
  "aspectRatio": "16:9",
  "resolution": {
    "width": 1920,
    "height": 1080
  },
  "duration": "30-90s",
  "frameRate": 30,

  "structure": {
    "setup": {
      "duration": "5s",
      "elements": [
        {
          "type": "background",
          "video": "[Client B-Roll or Home Footage]",
          "overlay": {
            "gradient": {
              "type": "linear",
              "angle": 180,
              "colors": ["rgba(0,0,0,0.3)", "rgba(0,0,0,0.5)"]
            }
          }
        },
        {
          "type": "badge",
          "position": "top-center",
          "offset": {
            "y": 80
          },
          "dimensions": {
            "width": 280,
            "height": 80
          },
          "background": {
            "color": "#10b981",
            "opacity": 0.95
          },
          "borderRadius": 40,
          "elements": [
            {
              "type": "text",
              "content": "âœ“ Success Story",
              "font": "Inter",
              "weight": 700,
              "size": 28,
              "color": "#ffffff",
              "position": "center"
            }
          ],
          "animation": {
            "type": "scale-fade",
            "duration": "0.8s",
            "delay": "0.5s"
          }
        },
        {
          "type": "text",
          "layer": "name",
          "content": "[Client Name]",
          "font": "Inter",
          "weight": 700,
          "size": 56,
          "color": "#ffffff",
          "position": "bottom-left",
          "offset": {
            "x": 80,
            "y": -220
          },
          "textShadow": "0px 2px 15px rgba(0,0,0,0.6)",
          "animation": {
            "type": "fade-up",
            "duration": "0.8s",
            "delay": "1s"
          }
        },
        {
          "type": "text",
          "layer": "location",
          "content": "[City, State]",
          "font": "Inter",
          "weight": 500,
          "size": 32,
          "color": "#ffffff",
          "opacity": 0.9,
          "position": "bottom-left",
          "offset": {
            "x": 80,
            "y": -170
          },
          "textShadow": "0px 2px 10px rgba(0,0,0,0.6)",
          "animation": {
            "type": "fade-in",
            "duration": "0.6s",
            "delay": "1.3s"
          }
        },
        {
          "type": "logo",
          "file": "assets/logos/RepMotivatedSeller_Logo_White.png",
          "position": "bottom-right",
          "offset": {
            "x": -80,
            "y": -80
          },
          "size": "12%",
          "opacity": 0.7
        }
      ]
    },

    "story": {
      "duration": "60-75s",
      "mainInterview": {
        "video": "[Client Interview Footage]",
        "overlay": {
          "type": "vignette",
          "opacity": 0.2
        },
        "colorGrading": {
          "warmth": 1.15,
          "saturation": 1.1,
          "contrast": 1.05
        }
      },
      "pullQuotes": [
        {
          "timing": "15s",
          "type": "overlay",
          "position": "center",
          "background": {
            "color": "#000000",
            "opacity": 0.5
          },
          "blur": 8,
          "elements": [
            {
              "type": "text",
              "content": "\"[POWERFUL QUOTE FROM CLIENT]\"",
              "font": "Inter",
              "weight": 600,
              "size": 56,
              "color": "#ffffff",
              "textAlign": "center",
              "maxWidth": "75%",
              "lineHeight": 1.4,
              "textShadow": "0px 2px 10px rgba(0,0,0,0.5)"
            }
          ],
          "animation": {
            "in": {
              "type": "fade-scale",
              "duration": "0.8s"
            },
            "out": {
              "type": "fade",
              "duration": "0.6s"
            },
            "showDuration": "6s"
          }
        }
      ],
      "lowerThird": {
        "position": "bottom",
        "dimensions": {
          "width": "100%",
          "height": 100
        },
        "background": {
          "gradient": {
            "type": "linear",
            "angle": 0,
            "colors": ["rgba(30, 58, 138, 0)", "rgba(30, 58, 138, 0.85)"]
          }
        },
        "elements": [
          {
            "type": "text",
            "content": "[Client Name] - [Brief Context]",
            "font": "Inter",
            "weight": 600,
            "size": 32,
            "color": "#ffffff",
            "position": "bottom-left",
            "offset": {
              "x": 80,
              "y": -35
            }
          }
        ],
        "show": "always"
      },
      "bRollCutaways": {
        "frequency": "every 10-15s",
        "duration": "3-5s each",
        "suggestions": [
          "Home exterior shots",
          "Family photos",
          "Document signing",
          "Happy moments at home"
        ],
        "overlay": {
          "opacity": 1.0
        },
        "transition": {
          "type": "cross-dissolve",
          "duration": "0.8s"
        }
      }
    },

    "result": {
      "duration": "10s",
      "elements": [
        {
          "type": "background",
          "video": "[Happy Ending B-Roll]",
          "overlay": {
            "color": "#ffffff",
            "opacity": 0.2
          },
          "colorGrading": {
            "warmth": 1.2,
            "saturation": 1.15,
            "brightness": 1.1
          }
        },
        {
          "type": "box",
          "position": "right-center",
          "offset": {
            "x": -150,
            "y": 0
          },
          "dimensions": {
            "width": 500,
            "height": 320
          },
          "background": {
            "color": "#ffffff"
          },
          "border": {
            "width": 3,
            "color": "#10b981"
          },
          "borderRadius": 16,
          "boxShadow": "0px 8px 30px rgba(0,0,0,0.25)",
          "elements": [
            {
              "type": "icon",
              "content": "ðŸŽ‰",
              "size": 80,
              "position": "top-center",
              "offset": {
                "y": 40
              }
            },
            {
              "type": "text",
              "layer": "metric",
              "content": "$[AMOUNT]",
              "font": "Inter",
              "weight": 800,
              "size": 72,
              "color": "#10b981",
              "position": "center",
              "textAlign": "center",
              "animation": {
                "type": "count-up",
                "duration": "2s"
              }
            },
            {
              "type": "text",
              "layer": "label",
              "content": "Saved from Foreclosure",
              "font": "Inter",
              "weight": 600,
              "size": 28,
              "color": "#1e3a8a",
              "position": "bottom-center",
              "offset": {
                "y": -50
              },
              "textAlign": "center",
              "maxWidth": "85%"
            }
          ],
          "animation": {
            "in": {
              "type": "slide-scale",
              "direction": "right",
              "duration": "1s"
            }
          }
        },
        {
          "type": "confetti",
          "file": "assets/overlays/confetti-celebration.mp4",
          "position": "full-screen",
          "opacity": 0.6,
          "blendMode": "screen",
          "timing": "2s-6s"
        }
      ]
    },

    "cta": {
      "duration": "5s",
      "elements": [
        {
          "type": "background",
          "gradient": {
            "type": "linear",
            "angle": 135,
            "colors": ["#2563eb", "#4338ca"]
          }
        },
        {
          "type": "logo",
          "file": "assets/logos/RepMotivatedSeller_Logo_White.png",
          "position": "top-center",
          "offset": {
            "y": 120
          },
          "size": "20%"
        },
        {
          "type": "text",
          "layer": "headline",
          "content": "Your Success Story Starts Here",
          "font": "Inter",
          "weight": 800,
          "size": 56,
          "color": "#ffffff",
          "position": "center",
          "textAlign": "center",
          "animation": {
            "type": "fade-up",
            "duration": "0.8s"
          }
        },
        {
          "type": "button",
          "content": "Get Free Consultation",
          "font": "Inter",
          "weight": 700,
          "size": 36,
          "color": "#1e3a8a",
          "backgroundColor": "#ffffff",
          "position": "bottom-center",
          "offset": {
            "y": -200
          },
          "padding": {
            "horizontal": 50,
            "vertical": 20
          },
          "borderRadius": 10,
          "animation": {
            "type": "scale-bounce",
            "duration": "1s",
            "delay": "0.8s"
          }
        },
        {
          "type": "text",
          "content": "ðŸ“ž 1-800-XXX-XXXX | www.RepMotivatedSeller.com",
          "font": "Inter",
          "weight": 600,
          "size": 28,
          "color": "#ffffff",
          "opacity": 0.9,
          "position": "bottom-center",
          "offset": {
            "y": -120
          },
          "textAlign": "center"
        }
      ]
    }
  },

  "audio": {
    "music": {
      "file": "assets/music/emotional-inspiring-[TRACK].mp3",
      "volume": -28,
      "fadeIn": "3s",
      "fadeOut": "4s",
      "notes": "Use soft piano or acoustic guitar for emotional connection"
    },
    "interviewAudio": {
      "volume": 0,
      "compression": {
        "ratio": "4:1",
        "threshold": "-12dB"
      },
      "eq": {
        "lowCut": "80Hz",
        "warmth": "2dB at 200Hz",
        "clarity": "3dB at 3kHz"
      },
      "noiseReduction": "medium"
    },
    "soundEffects": [
      {
        "type": "success-chime",
        "file": "assets/sfx/success-bell.mp3",
        "timing": "when result metric appears",
        "volume": -20
      }
    ]
  },

  "filming": {
    "interview": {
      "camera": "Eye level, slightly off-center",
      "lighting": "Soft, flattering (golden hour or three-point)",
      "background": "Blurred home or office (depth of field)",
      "framing": "Medium close-up (shoulders and head)",
      "tips": [
        "Make client comfortable - have conversation first",
        "Use teleprompter or cue cards if needed",
        "Capture multiple takes",
        "Record separate B-roll of home"
      ]
    },
    "bRoll": {
      "suggestions": [
        "Home exterior (golden hour)",
        "Family activities inside home",
        "Document signing or paperwork",
        "Happy family moments",
        "Before/after home improvements (if applicable)"
      ],
      "tips": [
        "Shoot 4x more B-roll than needed",
        "Vary shot types (wide, medium, close-up)",
        "Use slow motion for emotional moments",
        "Capture genuine, candid moments"
      ]
    }
  },

  "captions": {
    "enabled": true,
    "style": {
      "font": "Inter",
      "weight": 600,
      "size": 44,
      "color": "#ffffff",
      "backgroundColor": "#000000",
      "backgroundOpacity": 0.75,
      "padding": {
        "horizontal": 18,
        "vertical": 8
      },
      "borderRadius": 4,
      "position": "bottom-center",
      "offset": {
        "y": -100
      },
      "maxWidth": "75%",
      "textAlign": "center"
    }
  },

  "exports": {
    "website": {
      "format": "MP4",
      "codec": "H.264",
      "resolution": "1920x1080",
      "frameRate": 30,
      "bitrate": "12Mbps",
      "audioCodec": "AAC",
      "audioBitrate": "192kbps"
    },
    "social": {
      "format": "MP4",
      "codec": "H.264",
      "resolution": "1080x1920",
      "frameRate": 30,
      "bitrate": "10Mbps",
      "audioCodec": "AAC",
      "audioBitrate": "192kbps",
      "note": "Vertical version for Instagram/Facebook Stories"
    }
  },

  "notes": [
    "Get signed release form from client before filming",
    "Focus on emotional journey, not just facts",
    "Use natural lighting when possible",
    "Keep pull quotes to 2-3 maximum",
    "Show genuine emotion - authenticity matters",
    "Music should support, not overpower the story",
    "Add captions for accessibility",
    "Consider creating both 16:9 and 9:16 versions",
    "Always end with clear CTA and contact info"
  ]
}
