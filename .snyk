# Snyk (https://snyk.io) policy file

version: v1.25.0

# Ignore specific paths that don't need security scanning
exclude:
  global:
    - test/**
    - tests/**
    - **/*.test.ts
    - **/*.test.tsx
    - **/*.spec.ts
    - **/*.spec.tsx
    - docs/**
    - backups/**
    - pre_upgrade_backups/**
    - tmp/**
    - migrations/**
    - seeds/**
    - netlify-analysis/**

# Patch configuration for auto-remediation
patch:
  'SNYK-JS-*':
    - '*':
        patched: '2025-01-01T00:00:00.000Z'

# Language settings
language-settings:
  javascript:
    # Focus on production dependencies
    dev-dependencies: false
