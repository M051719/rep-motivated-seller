{
  "scripts": {
    "security:scan": "hawk scan",
    "security:scan:quick": "hawk scan --config-override scanner.maxDuration=10",
    "security:scan:full": "hawk scan --config-override scanner.maxDuration=60",
    "security:scan:api": "hawk scan --config-override spider.enabled=false --api-scan-only",
    "security:report": "hawk scan --format json,html",
    "security:baseline": "hawk scan --create-baseline",
    "dev:secure": "npm run dev -- --host 0.0.0.0"
  }
}

{
  "scripts": {
    "dev": "vite --config vite.config.enhanced.ts",
    "build": "tsc && vite build --config vite.config.enhanced.ts",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "npx vite-bundle-analyzer dist",
    "deploy": "npm run build && npm run deploy:cloudflare",
    "deploy:cloudflare": "wrangler pages publish dist",
    "start:enhanced": "node -r dotenv/config dist/server.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.32.6",
    "react-error-boundary": "^4.0.11",
    "react-hot-toast": "^2.4.1",
    "framer-motion": "^10.16.4",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "prettier": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}

{
  "scripts": {
    "db:setup": "supabase db execute --file setup_database.sql",
    "db:test": "supabase db execute --file test_database.sql",
    "db:inspect": "supabase db inspect",
    "db:status": "echo 'SELECT current_database(), current_user, version();' | supabase db execute",
    "db:migrate": "supabase db push"
  }
}